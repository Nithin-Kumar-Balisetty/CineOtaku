<%- include("partials/header1"); -%>
<%var loggedin=false;%>
<%if(user.length==1){loggedin = true;}%>
<div id="headerlogin">
  <%if(loggedin!=true){%>
    <a href="/account" id="login">Login</a>
    <a href="/accounts" id="signup">Sign Up</a>
  <%}%>
  <%if(loggedin==true){%>
    <div style="display:grid;grid-template-columns:1fr;" class="headeruser">
      <p id="signup" onclick="userbutton()"><img src="<%=user[0].profile_image%>" alt="not found" height="25" width="20"><%=user[0].username+" "%><i class="arrow down"></i></p>
      <p id="userinfo" style="display : none;" onclick="myaccount()">My Account</p>
      <p id="signout" style="display : none;" onclick="signout()">Sign Out</p>
    </div>
  <%}%>
</div>
<%- include("partials/extra1"); -%>
<main class="mains">
<div class="leftmain">
    <h5 class="firsttag" style="text-align: center;">NEWS POST</h5>
    <div class="newsitems" style="grid-template-columns: 1fr;">
     <%if(postdetails!=null){%>
      <div class="articletitle" style="display: block; margin-left:10px; margin-right: 10px;">
            <%=postdetails.posttitle%>
        </div>
        <div class="posteddate" style="display: block; margin-left:10px; margin-right: 10px;">
          <p style="display: inline; font-weight: 600;">Posted on : </p>
          <p style="margin-left: 5px; display: inline"><%=postdetails.postdate%></p>
        </div>
        <div class="postauthor" style="display: block; margin-left:10px; margin-right: 10px;">
          <p style="display: inline;font-weight: 600;">Posted by : </p>
          <p style="margin-left: 5px; display: inline"><%=postdetails.postauthor%></p>
        </div>
        <div class="articleimg" style="margin-top: 25px;display: block;margin-left: auto;margin-right: auto;">
          <img src="<%=postdetails.postimg%>" alt="Image not found" height="500" width="800">
        </div>
        <div class="articlecontent1" style="margin-top: 40px;display: block; margin-left:10px; margin-right: 10px;">
          <%- postdetails.postdata %>
        </div>
      <%}%>
    </div>
</div>
<div class="rightmain">
    <h5 class="topairing">Trending Movies Worldwide</h5>
    <div class="airinganime">
    <% jsontopmoviesw.forEach(async (item,i)=>{%>
        <div class="airing">
            <div class="number"><%=(i+1)%></div>
            <%if(typeof jsontopmoviesw=='undefined'){%>
              <div class="imageair"><img src="https://www.planetf1.com/content/themes/planet/img/no_image.jpg" alt=""></div><%}%>
            <%if(typeof jsontopmoviesw!='undefined'){%>
            <div class="imageair"><img src="https://image.tmdb.org/t/p/w500<%=item.poster_path%>" alt=""></div><%}%>
            <div class="airname"><a href="/binger/movie/<%=item.id%>"><%=item.original_title%></a></div>
        </div>
        <%})%>
        <h5 class="topairing">Trending Series Worldwide</h5>
        <div class="airinganime">
        <%for(i=0;i<5;i++){%>
        <div class="airing">
            <div class="number"><%=(i+1)%></div>
            <div class="imageair"><img src="https://image.tmdb.org/t/p/w500<%=jsontopseriesw[i].poster_path%>" alt=""></div>
            <div class="airname"><a href="/binger/series/<%=jsontopseriesw[i].id%>"><%=jsontopseriesw[i].original_name%></a></div>
        </div>
      <%}%>
    </div>
</div>
</div>


</main>
</div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
<script src="scripts/animehome.js"></script>
</html>
