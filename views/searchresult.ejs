<%- include("partials/header"); -%>
<%var loggedin=false;%>
<%if(typeof user.email!="undefined"){loggedin = true;}%>
<div id="headerlogin">
  <%if(loggedin!=true){%>
    <a href="/login" id="login">Login</a>
    <a href="/signup" id="signup">Sign Up</a>
  <%}%>
  <%if(loggedin==true){%>
    <div style="display:grid;grid-template-columns:1fr;" class="headeruser">
      <p id="signup" onclick="userbutton()"><img src="<%=user.profile_image%>" alt="not found" height="25" width="20"><%=user.username+" "%><i class="arrow down"></i></p>
      <p id="userinfo" style="display : none;" onclick="myaccount()">My Account</p>
      <p id="signout" style="display : none;" onclick="signout()">Sign Out</p>
    </div>
  <%}%>
</div>
<%- include("partials/extra"); -%>
<main class="mains">
<div class="leftmain">
<h5 class="firsttag" style="text-align:center;">Search results</h5>
<h5 class="firsttag" style="background-color: #2e51a2; color : white; padding-top : 5px"><p style="display : inline; margin-top : 5px;">Anime Results</p></h5>
<% let animeobjects=animeobject%>
<% for(let i=0;i<10;i++){ %>
<div class="searchitems">
    <div class="animesearchimg">
        <img src="<%=animeobjects[i].image_url%>">
    </div>
    <div class="animesearchdata">
        <div class="animetitle">
            <a href="/otaku/anime/<%=animeobjects[i].mal_id%>" style="text-decoration:none;"><%=animeobjects[i].title%></a> (<%=animeobjects[i].type%>)
        </div>
        <div class="animeeps">
          <%if(animeobjects[i].type=="Movie"){%>
            <%=animeobjects[i].episodes%> episode<%}%>
          <%if(animeobjects[i].type!="Movie"){%>
            <%=animeobjects[i].episodes%> episodes<%}%>
        </div>
        <div class="animestory">
          <%if(animeobjects[i].synopsis==""){%>
              No synopsis of this item has been added in our database.<%}%>
          <%if(animeobjects[i].synopsis!=""){%>
                <%=animeobjects[i].synopsis%><a href="/otaku/anime/<%=animeobjects[i].mal_id%>">Read more</a><%}%>
        </div>
        <div class="animerating">
            <%=animeobjects[i].score%>
        </div>
    </div>
</div>
<% } %>
<h5 class="firsttag" style="background-color: #2e51a2; color : white; padding-top : 5px"><p style="display : inline; margin-top : 5px;">Manga Results</p></h5>
<% let mangaobjects=mangaobject%>
<% for(let i=0;i<10;i++){ %>
<div class="searchitems">
    <div class="animesearchimg">
        <img src="<%=mangaobjects[i].image_url%>">
    </div>
    <div class="animesearchdata">
        <div class="animetitle">
            <a href="/otaku/manga/<%=mangaobjects[i].mal_id%>" style="text-decoration:none;"><%=mangaobjects[i].title%></a>
        </div>
        <div class="animestory">
          <%if(mangaobjects[i].synopsis==""){%>
              No synopsis of this item has been added in our database.<%}%>
          <%if(mangaobjects[i].synopsis!=""){%>
                <%=mangaobjects[i].synopsis%><a href="/otaku/manga/<%=mangaobjects[i].mal_id%>">Read more</a><%}%>
        </div>
        <div class="animerating">
            <%=mangaobjects[i].score%>
        </div>
    </div>
</div>
<% } %>
</div>
<div class="rightmain">
    <h5 class="topairing">Top Airing Anime</h5>
    <div class="airinganime">
      <% let airanime = airanimeobject %>
      <% for(let i=0;i<5;i++) {%>
        <div class="airing">
            <div class="number"><%=(i+1)%></div>
            <div class="imageair"><img src="<%=airanime[i].image_url%>" alt=""></div>
            <div class="airname"><a href="/otaku/anime/<%=airanime[i].mal_id%>"><%=airanime[i].title%></a></div>
        </div>
        <% }%>
        <h5 class="topairing">Most Popular Anime</h5>
        <div class="airinganime">
        <%let popanime=topanimeobject%>
        <%for(i=0;i<5;i++){%>
        <div class="airing">
            <div class="number"><%=(i+1)%></div>
            <div class="imageair"><img src="<%=popanime[i].image_url%>" alt=""></div>
            <div class="airname"><a href="/otaku/anime/<%=popanime[i].mal_id%>"><%=popanime[i].title%></a></div>
        </div>
        <%}%>
      </div>
    </div>
</div>


  </main>
</div>
</body>
